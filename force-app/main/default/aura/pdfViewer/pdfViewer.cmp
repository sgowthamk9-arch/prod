<aura:component implements="lightning:availableForFlowScreens,force:hasRecordId" access="global">
    <!-- Define attributes in Aura -->
    <aura:attribute name="fileId" type="String" access="global" />
    <aura:attribute name="heightInRem" type="String" access="global" />
    <aura:attribute name="onStep2" type="String" access="global" />
    <aura:attribute name="type" type="String" access="global" />

    <!-- Pass the attributes to LWC -->
    <c:pdfViewerLWC workRecordId="{!v.fileId}" heightInRem="{!v.heightInRem}" hideButtonOnNextStep="{!v.onStep2}" fileType="{!v.type}"></c:pdfViewerLWC>
</aura:component>