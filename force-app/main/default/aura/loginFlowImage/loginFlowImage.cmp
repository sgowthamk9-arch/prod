<aura:component implements="forceCommunity:availableForAllPageTypes,flexipage:availableForAllPageTypes,lightning:availableForFlowScreens" access="global">
    <aura:attribute name="imageUrl" type="String" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <div class="image-container">
        <aura:if isTrue="{!not(empty(v.imageUrl))}">
            <img src="{!v.imageUrl}" alt="Dynamic Image" class="responsive-image"/>
        </aura:if>
    </div>
</aura:component>